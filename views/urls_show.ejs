<% include partials/_headers %>

    <div class="text-center">
            <a  href="/urls/new">Create New TinyURL</a>
    </div>
    <hr>
    <% if(urlDatabase[shortURL].userID === user_id) {%>
        <p>ShortURL: <strong><%= shortURL %> </strong></p>
        <form class="form" action="/urls/<%=shortURL%>/edit" method="POST">    
            <input type="text" name="newLongURL" placeholder="<%= urlDatabase[shortURL].longURL %>"></input>
            <button class="btn btn-sm btn-light">Update longURL</button>
            <form method="POST" action="/urls/<%= shortURL%>/delete">
                <button class="btn btn-sm btn-danger">Delete <i class="far fa-trash-alt"></i></button>
            </form>
        </form>
        <p>This URL belongs to <%= urlDatabase[shortURL].userID %> </p>
        <% } %>
</body>
</html>